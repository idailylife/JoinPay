<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fcfcfc"
    tools:context="com.soontobe.joinpay.fragment.SendFragment" >

    <!-- TODO: Update blank fragment layout -->
    <!-- Using FrameLayout to implement customized positions of buttons/drawables... -->

    <RelativeLayout
        android:focusableInTouchMode="true" 
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
	
    	<!-- Test button to call the big bubble. -->
    	<!-- End of test button -->
    

        <Button
            android:id="@+id/contact_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="contactButtonOnClick"
            android:text="Contact List"
            android:layout_centerHorizontal="true" />

        <LinearLayout
            android:id="@+id/radar_view_bottom_bar"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true" >

            <Button
                android:id="@+id/send_total_lock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="setSendTotalLock"
                android:text="U" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:hint="Total" 
                android:inputType="numberDecimal" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1" />
            
            <Button
                android:id="@+id/send_request_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Next"
                android:onClick="sendProceedToConfirm" />
        </LinearLayout>
        
        <RelativeLayout
            android:id="@+id/group_note_bar"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/radar_view_bottom_bar" >

            <Button
                android:id="@+id/group_note_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/group_note"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/group_note_icon"
                
                android:hint="What&apos;s it for" />
        </RelativeLayout>

        <Button
            android:id="@+id/button_call_bigbubble"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/contact_button"
            android:layout_centerHorizontal="true"
            android:onClick="debugCallBigBubble"
            android:text="CALL_BIG_BUBBLE" />

    </RelativeLayout>

</FrameLayout>