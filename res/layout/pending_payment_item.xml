<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" 
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:padding="10dp"
    android:orientation="vertical"
    >
    <!-- first row -->
    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >
        <TextView 
            android:id="@+id/textview_left_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Anish"
            android:textSize="16sp"
            android:layout_alignParentLeft="true"
            />

        <TextView
            android:id="@+id/textview_paytype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/textview_left_name"
            android:text="will pay"
            android:textSize="16sp"
            android:layout_marginLeft="5dp"
            android:textColor="#bdce26" />
        
        <TextView
            android:id="@+id/textview_right_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:text="Itziar"
            android:textSize="16sp"
            android:layout_toRightOf="@+id/textview_paytype"
            android:layout_marginLeft="5dp"
            />
        
        <TextView
            android:id="@+id/textview_money_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+$12.3"
            android:layout_alignParentRight="true"
            android:textColor="#bdce26"
            android:textSize="18sp"
        	/>
        
        <!-- Bottom row -->
        
    </RelativeLayout>
    
    <!-- Second row -->
    <TextView 
        android:id="@+id/textview_payment_note"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Helloween party and Pay one extra beer"
        android:textColor="#7d7d7d"
        />
    
    <ImageView 
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:src="@color/color_separate_line"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="2dp"
        />
    
    <!-- Third row -->
    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_marginTop="5dp"
        android:gravity="bottom"
        >
		<TextView 
		    android:id="@+id/textview_pending_date"
		    android:layout_width="wrap_content"
		    android:layout_height="fill_parent"
		    android:gravity="center"
		    android:text="2014-10-25"
		    android:textColor="#7d7d7d"
		    android:layout_alignParentLeft="true"
		    />
        <TextView 
            android:id="@+id/textview_separator"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:layout_toRightOf="@+id/textview_pending_date"
            android:text=" | "
            android:visibility="gone"
            android:textColor="#7d7d7d"
            />
        <TextView 
            android:id="@+id/textview_pending_time"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:text="1d"
            android:visibility="gone"
            android:layout_toRightOf="@+id/textview_separator"
            android:textColor="#7d7d7d"
            />
        
        <Button 
            android:id="@+id/button_accept_transaction"
            android:layout_alignParentRight="true"
            android:text="Accept"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:background="@drawable/button_normal"
            />
        
        <Button 
            android:id="@+id/button_decline_transaction"
            android:layout_toLeftOf="@+id/button_accept_transaction"
            android:text="Decline"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/button_normal"
            />
        
    </RelativeLayout>

</LinearLayout>
