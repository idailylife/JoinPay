        android:layout_height="24dp"
        android:layout_marginTop="45.6dp"
        android:background="@drawable/shape_small_button_circle"
        />-->
    <ImageButton 
        android:id="@+id/button_adjpanel_left"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="45.6dp"
        android:src="@drawable/pencil_white"
        android:scaleType="fitCenter"
        android:padding="3dp"
        android:background="@drawable/shape_small_button_circle"
        />
    
    <!-- Bottom button -->
    <!--<ImageView 
        android:id="@+id/imgview_adjpanel_bottom"
        android:layout_gravity="bottom"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginLeft="45.6dp"
        android:src="@drawable/shape_small_button_circle"
        />-->
    <ImageButton 
        android:id="@+id/button_adjpanel_bottom"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginLeft="45.6dp"
        android:layout_gravity="bottom"
        android:src="@drawable/add_person_white"
        android:scaleType="fitCenter"
        android:padding="3dp"
        android:background="@drawable/shape_small_button_circle"
        />
    
    <!-- Right button -->
    <!--  <ImageView 
        android:id="@+id/imgview_adjpanel_right"
        android:layout_gravity="right"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="45.6dp"
        android:background="@drawable/shape_small_button_circle"
        />-->
    <ImageButton 
        android:id="@+id/button_adjpanel_right"
        android:layout_gravity="right"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="45.6dp"
        android:background="@drawable/shape_small_button_circle"
        android:src="@drawable/cross_white"
        android:scaleType="fitCenter"
        android:padding="3dp"
        />
    
    <!-- Center border and big button -->
    <Button 
        android:id="@+id/button_adjpanel_center"
        android:layout_width="62.4dp"
        android:layout_height="62.4dp"
        android:layout_marginTop="26.4dp"
        android:layout_marginLeft="26.4dp"
        android:background="@drawable/shape_circle_white_w_border"
        />
    <TextView 
        android:id="@+id/textview_adjpanel_name"
        android:focusable="false"
        android:layout_width="60dp"
        android:layout_height="16dp"
        android:textSize="12sp"
        android:text="NAME"
        android:layout_gravity="center"
        android:layout_marginBottom="8dp"
        android:gravity="center_horizontal"
        />
    <TextView 
        android:id="@+id/textview_adjpanel_money"
        android:focusable="false"
        android:layout_width="60dp"
        android:layout_height="17dp"
        android:textSize="15sp"
        android:text="$24.2"
        android:layout_gravity="center"
        android:layout_marginTop="9dp"
        android:gravity="center_horizontal"
        />
    
</FrameLayout>
