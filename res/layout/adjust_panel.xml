<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="115.2dp"
    android:layout_height="115.2dp" >
    
    <!-- Yellow circle background -->
    <ImageView
        android:id="@+id/imgview_adjpanel_yellow"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_marginLeft="9.6dp"
        android:layout_marginTop="9.6dp"
        android:src="@drawable/shape_small_circle" />
	
    <!-- Top button -->
    <!-- <ImageView 
        android:id="@+id/imgview_adjpanel_top"
