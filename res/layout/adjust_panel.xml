<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="115.2dp"
    android:layout_height="115.2dp" >
    
    <!-- Yellow circle background -->
    <ImageView
        android:id="@+id/imgview_adjpanel_yellow"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_marginLeft="9.6dp"
        android:layout_marginTop="9.6dp"
        android:src="@drawable/shape_small_circle" />
	
    <!-- Top button -->
    <ImageView 
        android:id="@+id/imgview_adjpanel_top"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginLeft="45.6dp"
        android:src="@drawable/shape_small_button_circle"        
        />
    <Button 
        android:id="@+id/button_adjpanel_top"
        android:layout_width="19.2dp"
        android:layout_height="19.2dp"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="2.4dp"
        android:background="@drawable/unlocked_white"
        />
    
    <!-- Left button -->
    <ImageView 
        android:id="@+id/imgview_adjpanel_left"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="45.6dp"
        android:background="@drawable/shape_small_button_circle"
        />
    <Button 
        android:id="@+id/button_adjpanel_left"
        android:layout_width="19.2dp"
        android:layout_height="19.2dp"
        android:layout_marginTop="48dp"
        android:layout_marginLeft="2.4dp"
        android:background="@drawable/pencil_white"
        />
    
    <!-- Bottom button -->
    <ImageView 
        android:id="@+id/imgview_adjpanel_bottom"
        android:layout_gravity="bottom"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginLeft="45.6dp"
        android:src="@drawable/shape_small_button_circle"
        />
    <Button 
        android:id="@+id/button_adjpanel_bottom"
        android:layout_width="19.2dp"
        android:layout_height="19.2dp"
        android:layout_marginLeft="48dp"
        android:layout_marginBottom="2.4dp"
        android:layout_gravity="bottom"
        android:background="@drawable/add_person_white"
        />
    
    <!-- Right button -->
    <ImageView 
        android:id="@+id/imgview_adjpanel_right"
        android:layout_gravity="right"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="45.6dp"
        android:background="@drawable/shape_small_button_circle"
        />
    <Button 
        android:id="@+id/button_adjpanel_right"
        android:layout_gravity="right"
        android:layout_width="19.2dp"
        android:layout_height="19.2dp"
        android:layout_marginTop="48dp"
        android:layout_marginRight="2.4dp"
        android:background="@drawable/cross_white"
        />
    
    <!-- Center border and big button -->
    <Button 
        android:id="@+id/button_adjpanel_center"
        android:layout_width="62.4dp"
        android:layout_height="62.4dp"
        android:layout_marginTop="26.4dp"
        android:layout_marginLeft="26.4dp"
        android:background="@drawable/shape_circle_white_w_border"
        />
    <TextView 
        android:id="@+id/textview_adjpanel_name"
        android:focusable="false"
        android:layout_width="60dp"
        android:layout_height="16dp"
        android:textSize="10sp"
        android:text="NAME"
        android:layout_gravity="center"
        android:layout_marginBottom="8dp"
        android:gravity="center_horizontal"
        />
    <TextView 
        android:id="@+id/textview_adjpanel_money"
        android:focusable="false"
        android:layout_width="60dp"
        android:layout_height="16dp"
        android:textSize="13sp"
        android:text="$24.2"
        android:layout_gravity="center"
        android:layout_marginTop="9dp"
        android:gravity="center_horizontal"
        />
    
</FrameLayout>
